
      <section class="hero">
        <div class="hero__content">
          <h1 class="hero__title">Откройте для себя лучшие песни и стихи</h1>
          <div class="hero__search">
            <div class="hero__search-icon">
              <i class="fas fa-search"></i>
            </div>
            <input class="hero__search-input" type="text" name="hero__search" id="search"
              placeholder="Например: Пушкин, Queen, Виктор Цой..">
            <button class="hero__search-button">
              Поиск
            </button>
          </div>
        </div>
      </section>

      <!-- Избранные стихи -->

      <% if (featuredPoems.length > 0) { %>
              <section>
                <h2 class="section-title">Избранные стихи</h2>
                <div class="items-grid">
                  <% featuredPoems.forEach(poem => { %>
                    <div class="item-card">
                      <div class="item-image">
                        <img
                        src="<%= poem.imageUrl || 'https://placehold.co/400x400/f8e2cf/333333?text=' + poem.author.name %>"
                        alt="<%= poem.title %>">
                      </div>
                      <h3 class="item-title">
                        <a href="#">
                          <%= poem.title %>
                        </a>
                    </h3>
                      <p class="item-subtitle"> <%= poem.author.name %> </p>
                    </div>
                  <% }) %>
                </div>
              </section>

      <% } %>


      <!-- Лучшие песни -->
      <% if (featuredSongs?.length > 0) { %>
              <section>
                <h2 class="section-title">Лучшие песни</h2>
                <div class="items-grid">
                  <% featuredSongs.forEach(song => { %>
                    <div class="item-card">
                      <div class="item-image">
                        <img
                        src="<%= song.imageUrl || 'https://placehold.co/400x400/f8e2cf/333333?text=' + song.author.name %>"
                        alt="<%= song.title %>">
                      </div>
                      <h3 class="item-title">
                        <a href="#">
                          <%= song.title %>
                        </a>
                      </h3>
                      <p class="item-subtitle">
                        <%= song.author.name %></p>
                    </div>
                  <% }) %>
                </div>
              </section>
      <% } %>



      <% if (featuredAuthors?.length> 0) { %>
      <section>
        <h2 class="section-title">Популярные авторы</h2>
        <div class="items-grid">
          <% featuredAuthors.forEach(author => { %>
          <div class="item-card">
            <div class="item-image">
              <img
                      src="<%= 'https://placehold.co/400x400/f8e2cf/333333?text=' + author.name %>"
                      alt="<%= author.name %>">
            </div>
            <h3 class="item-title"><a href="#"><%= author.name %></a></h3>
          </div>
          <% }) %>
        </div>
      </section>
      <% } %>

